<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Botón: Subir Producto -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir Producto"
        android:textColor="@color/black"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Botón: Top 10 Vendedores -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTopSellers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top 10 Vendedores"
        android:textColor="@color/black"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Botón: Mis Productos -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUserProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Productos"
        android:textColor="@color/black"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Botón: Top 10 vendedores con más ventas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTopSellersSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top 10 vendedores con más ventas"
        android:textColor="@color/black"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>